{
  "env": {
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "prettier/prettier": "error",
    "no-var": "error", // var 사용 금지
    "semi": ["error", "always"], // 세미콜론 강제
    "quotes": ["error", "single"], // 싱글 쿼트 강제
    "no-unused-vars": ["warn"] // 사용되지 않는 변수 경고
  }
}
